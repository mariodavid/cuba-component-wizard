<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        xmlns:wizard="http://schemas.diedavids.de/wizard/0.1/ui-component.xsd"
        caption="msg://caption"
        class="de.diedavids.cuba.wizard.web.screens.examples.example1.WizardExample1"
        messagesPack="de.diedavids.cuba.wizard.web.screens.examples.example1">
    <dialogMode height="600"
                forceDialog="true"
                width="800"/>
    <layout expand="wizard" spacing="true">

        <wizard:wizard id="wizard" width="100%" caption="My Wizard">

            <wizard:step id="step1"
                         icon="font-icon:ADN"
                         caption="Step 1"
                         screen="example-1-step-1-frame" />

            <wizard:step id="step2"
                         icon="font-icon:ANCHOR"
                         caption="Step 2"
                         screen="example-1-step-2-frame" />

            <wizard:step id="step3"
                         icon="font-icon:ANCHOR"
                         caption="Step 3"
                         screen="example-1-step-3-frame" />
        </wizard:wizard>

        <buttonsPanel>
            <button id="removeStep" invoke="removeStep" caption="msg://removeStep" />
        </buttonsPanel>
    </layout>
</window>
